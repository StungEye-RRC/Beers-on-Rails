<!DOCTYPE html>
<html>
  <head>
    <title>BeerApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= form_tag(search_results_path, method: "get") do %>
      <%= label_tag(:query, "Search for:") %>
      <%= text_field_tag(:query) %>
      <%= submit_tag("Search") %>
    <% end %>
    <!--
      When the form is submitted with the input as "test query" it results in:
      /search_results?utf8=%E2%9C%93&q=test+query&commit=Search
    -->

    <%= yield %>
  </body>
</html>
